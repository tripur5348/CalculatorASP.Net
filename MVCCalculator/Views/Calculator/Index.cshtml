@model MVCCalculator.Models.CalculatorModel

<!DOCTYPE html>
<html>
<head>
    <title>Simple Calculator</title>
    <!-- Include Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: Arial, sans-serif;
        }
        .calculator-container {
            max-width: 500px;
            margin: 50px auto; /* Center the container */
            background-color: #ffffff; /* White background */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 20px;
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #007bff; /* Bootstrap primary color */
        }
        .btn {
            width: 100%;
            background-color: #007bff;
            color: white;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .form-group label {
            font-weight: bold;
        }
        .result-container {
            text-align: center;
            margin-top: 20px;
            font-size: 1.5rem;
            color: #28a745; /* Bootstrap success color */
        }
    </style>
</head>
<body>
    <div class="calculator-container">
        <h2>Simple Calculator</h2>
        <form method="post">
            <!-- Input for the first number -->
            <div class="form-group mb-3">
                <label for="Number1">Number 1:</label>
                <input type="number" step="any" name="Number1" id="Number1" value="@Model.Number1" class="form-control" />
                @Html.ValidationMessageFor(m => m.Number1, null, new { @class = "text-danger" })
            </div>
            
            <!-- Input for the second number -->
            <div class="form-group mb-3">
                <label for="Number2">Number 2:</label>
                <input type="number" step="any" name="Number2" id="Number2" value="@Model.Number2" class="form-control" />
                @Html.ValidationMessageFor(m => m.Number2, null, new { @class = "text-danger" })
            </div>

            <!-- Dropdown for selecting the operation -->
            <div class="form-group mb-3">
                <label for="Operation">Operation:</label>
                <select name="Operation" id="Operation" class="form-control">
                    <option value="Add" selected="@(Model.Operation == "Add" ? "selected" : null)">Add</option>
                    <option value="Subtract" selected="@(Model.Operation == "Subtract" ? "selected" : null)">Subtract</option>
                    <option value="Multiply" selected="@(Model.Operation == "Multiply" ? "selected" : null)">Multiply</option>
                    <option value="Divide" selected="@(Model.Operation == "Divide" ? "selected" : null)">Divide</option>

                </select>
                @Html.ValidationMessageFor(m => m.Operation, null, new { @class = "text-danger" })
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Calculate</button>
        </form>

        <!-- Display the result -->
        @if (Model.Result != 0 || Model.Operation != null)
        {
            <div class="result-container">
                <h3>Result: @Model.Result</h3>
            </div>
        }
    </div>

    <!-- Include Bootstrap JS (Optional, for interactivity like modals, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
